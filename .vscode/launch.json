            "program": "${command:cmake.launchTargetPath}",
 //           "additionalSOLibSearchPath": "${workspaceFolder}/build/RESULT",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }



		{
			"name": "Launch lldb-vscode",
			"type": "lldb-vscode",
			"request": "launch",
			"program": "${command:cmake.launchTargetPath}",
			"args": [],
			"env": [],
			"cwd": "${workspaceFolder}",
			"stopOnEntry": false,
			"sourceMap": [["/path/a/", "/path/b"]]
		}



		{
			"name": "launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${command:cmake.launchTargetPath}",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": true,
			"linux": {
				"MIMode": "gdb"
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
				"MIMode": "gdb"
			}
		},
		{
			"name": "attach",
			"type": "cppdbg",
			"request": "attach",
